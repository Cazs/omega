extends ../layouts/default

block css
	link(rel="stylesheet", href="/styles/gallery.css")

block intro
	.container
		h1(style="text-align:center;") Gallery
	
block content
	.container
		.row
			each image, index in images
				.col-xs-12.col-sm-6.col-md-4.col-lg-3
					img.hover-shadow(src="images/gallery/"+image, style="width:380px;height:230px;border-radius:10px;margin:auto;padding:10px;", onclick="openModal();currentSlide("+(index+1)+")")
		#myModal.modal
			span(class="glyphicon glyphicon-remove").close.cursor(onclick="closeModal()", style="width:30px;height:30px;border-radius:50px;background-color: #fff;padding-left:3px;padding-top:3px;")
			.modal-content(style="background: transparent;")
				.caption-container
					//p#caption
				each image, index in images
					.mySlides(style="background: transparent;")
						.numbertext= (index+1) +"/"+ images.length
						img(src="images/gallery/"+image)
				a.prev(onclick="plusSlides(-1)") ❮
				a.next(onclick="plusSlides(1)") ❯
				#img-nav.row
					each image, index in images
						.col-xs-12.col-sm-6.col-md-4.col-lg-3(style="width:150px;height:60px;margin:auto;background-color:rgba(0,0,0,.7);border:2px solid black;")
							img.demo(src="images/gallery/"+image, style="width:100%;height:100%;", onclick="currentSlide("+(index+1)+")", alt=""+image)
